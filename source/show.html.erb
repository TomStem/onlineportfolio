        </ul>
      </div>
    </div>
</div>

  <div class="content-pp container media">
    <div class="row">
      <div class="col-xs-12 col-md-6">
        <div class="media-body">
          <div class="media-section">
            <h2><%= project.project_name %></h2>
            <%= image_tag project.picture %>
          </div>
          <div class="media-section">
            <h2>Summary</h2>
            <%= project.summary %>
          </div>
        </div>
      </div>
      <div class="col-xs-12 col-md-6">
        <div class="media-aside">
          <div class="media-section">
            <h2>Techniques</h2>
            <%= project.techniques %>
          </div>
          <div class="media-section">
            <h2>Url</h2>
            <%= link_to project.url, project.url %>
          </div>
        </div>
      </div>
    </div>  
  </div> 